@model SISTEMA_DE_INVENTARIO_JVS.Usuario

@{
    ViewData["Title"] = "Login Administrador";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SISTEMA_DE_INVENTARIO_JVS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SISTEMA_DE_INVENTARIO_JVS.styles.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(to top right, #ff6b6b, #f5f7fa);
            font-family: 'Roboto', sans-serif;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            padding: 40px 30px;
            max-width: 360px;
            width: 100%;
        }
        .login-container h2 {
            margin-bottom: 30px;
            color: #333;
        }
        .form-control {
            background: #f0f1f6;
            border: none;
            border-radius: 30px;
            box-shadow: none;
            padding: 15px;
            height: 50px;
        }
        .btn-primary {
            background: #ff6b6b;
            border: none;
            border-radius: 30px;
            padding: 15px;
            width: 100%;
            text-transform: uppercase;
        }
        .btn-primary:hover {
            background: #ee5253;
        }
        .custom-checkbox .custom-control-label::before {
            background: #f0f1f6;
        }
        .custom-checkbox .custom-control-input:checked ~ .custom-control-label::before {
            background: #ff6b6b;
        }
        .form-group {
            position: relative;
        }
        .form-group i {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 15px;
            color: #a1a1a1;
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="login-container shadow-lg">
            <div class="text-center mb-4">
                <i class="bi bi-person-circle" style="font-size: 3rem; color: #ff6b6b;"></i>
            </div>
            <h2 class="text-center mb-4">Iniciar Sesi칩n</h2>
            <form asp-controller="Acceso" asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <i class="bi bi-person"></i>
                    <input asp-for="UsuarioAdmin" class="form-control pl-5" placeholder="Usuario" required />
                    <span asp-validation-for="UsuarioAdmin" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <i class="bi bi-lock"></i>
                    <input asp-for="Contrase침a" type="password" class="form-control pl-5" placeholder="Contrase침a" required />
                    <span asp-validation-for="Contrase침a" class="text-danger"></span>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.Error
                    </div>
                }
                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="custom-control-input" id="rememberMe">
                    <label class="custom-control-label" for="rememberMe">Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Comenzar</button>
                <div class="text-center mt-3">
                    <a href="#" class="text-decoration-none" style="color: #ff6b6b;">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
